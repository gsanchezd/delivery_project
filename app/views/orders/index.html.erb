<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table>
  <thead>
    <tr>
      <th>Totalamount</th>
      <th>Deliveryamount</th>
      <th>Productsamount</th>
      <th>Orderlist</th>
      <th>Client</th>
      <th>Zone</th>
      <th>Payment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.totalamount %></td>
        <td><%= order.deliveryamount %></td>
        <td><%= order.productsamount %></td>
        <td><%= order.orderlist %></td>
        <td><%= order.client %></td>
        <td><%= order.zone %></td>
        <td><%= order.payment %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

